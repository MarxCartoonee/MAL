/* MINE */
.animetitle, .animetitle:visited {
color:#ef7a37;
font-family:comic Sans MS;
font-size:14pt;
}
.table_header {
background-color:#7d6042;
}
.header_title {
background:url(http://i.imgur.com/A36whwP.png) #DEAC67 190px center no-repeat;
color:#694c00;
font-family:'Monotype Corsiva';
font-size:24pt;
padding:5px;
/*text-shadow:-2px -2px 0 #DEAC67,2px -2px 0 #DEAC67,-2px 2px 0 #DEAC67,2px 2px 0 #DEAC67;*/
}
.header_title span{
display:block;
width:185px;
padding-right:5px;
text-align:center;
}
.td1,.td2{
background-color:#f6cd7b;
}
.td2:first-child,.td1:first-child,.table_header:first-child,.td2:last-child,.td1:last-child,.table_header:last-child,.header_title,.category_totals{
border-width:0px;
border-style:solid;
border-color:#694c00;
}
.td2:first-child,.td1:first-child,.table_header:first-child{
border-left-width:5px !important;
}
.td2:last-child,.td1:last-child,.table_header:last-child{
border-right-width:5px;
}
.header_title{
border-width:5px 5px 0px 5px;
border-radius:10px 10px 0 0;
}
.category_totals{
color:#f7cd77;
background-color:#7d6042;
border-width:0px 5px 5px 5px;
border-radius:0 0 10px 10px;
}
